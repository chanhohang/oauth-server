{
  "name": "oauth-server",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "server": "babel-node src/app/app.js",
    "stop": "node src/app/stop.js",
    "build": "./node_modules/.bin/webpack --config webpack/webpack.build.config.js --progress --colors",
    "dev": "nodemon -w src/app/app.js src/app/app.js --exec babel-node ",
    "testmocha": "cross-env NODE_ENV=test mocha --recursive test/helpers/initializeTests.js test/ --reporter mocha-junit-reporter --reporter-options mochaFile=./build/reports/mocha.xml",
    "localtest": "cross-env NODE_ENV=test mocha --recursive test/helpers/initializeTests.js test/",
    "testwatchmocha": "cross-env NODE_ENV=test mocha test/helpers/initializeTests.js test/ --recursive --watch",
    "lint": "eslint src",
    "test": "jest --debug",
    "next": "next",
    "testwatch": "jest --watchAll test/**"
  },
  "author": "Ho Hang Chan",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "browserify": "^14.4.0",
    "crypto": "0.0.3",
    "es6-shim": "0.35.1",
    "eslint": "^4.7.0",
    "express": "^4.15.3",
    "import-export": "^1.0.1",
    "isomorphic-unfetch": "^2.0.0",
    "log4js": "^2.3.2",
    "mongodb": "^2.2.31",
    "mysql2": "^1.3.6",
    "next": "^3.2.1",
    "node-jsx": "^0.13.3",
    "nodemailer": "^4.0.1",
    "nodemon": "^1.12.0",
    "path": "^0.12.7",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-dom-factories": "^1.0.1",
    "react-markdown": "^2.5.0",
    "reactify": "^1.1.1",
    "sequelize": "^4.4.2",
    "styled-jsx": "^1.0.10",
    "transform-runtime": "0.0.0"
  },
  "devDependencies": {
    "babel-jest": "^21.0.2",
    "babel-preset-es2015": "^6.24.1",    
    "babel-preset-react": "^6.24.1",
    "jest": "^21.1.0",
    "mocha": "^3.5.3",
    "react-test-renderer": "^15.6.1",
    "regenerator-runtime": "^0.11.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/test"
    ],
    "transform": {
      ".*": "babel-jest"
    }
  }
